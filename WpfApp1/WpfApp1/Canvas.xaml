<Window x:Class="WpfApp1.Canvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Canvas" Height="450" Width="800">
    <Canvas>
    <Button Canvas.Left="10" Canvas.Top="10">(10,10)</Button>
    <Button Canvas.Left="120" Canvas.Top="30">(120,30)</Button>
    <Button Canvas.Left="170" Canvas.Top="80" Width="50" Height="50">(60,80)</Button>
    <Button Canvas.Left="120" Canvas.Top="120" Width="100" Height="50" Canvas.ZIndex="-1">(70,120)</Button>
    </Canvas>
</Window>
